<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".charter3.AnimatorActivity">

    <com.example.administrator.practice.charter3.CustomView
        android:layout_width="90dp"
        android:layout_height="90dp" />
    <TextView
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textSize="32sp"
        android:text="animator"
        android:id="@+id/animator_text"
        android:layout_width="150dp"
        android:layout_height="90dp" />
    <com.example.administrator.practice.charter3.MyAnimView
        android:id="@+id/animator_my_anim_view"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/animator_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Property Animation"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>